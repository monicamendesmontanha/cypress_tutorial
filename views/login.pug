html
  head
    title= title
    style.
      body { font-family: arial; background-color: #f6f5f6; margin-left: 20% }
      form { margin-left: 20%; width: 250px; background-color: #fff; border: solid 1px #ddd; padding: 20px 40px 40px 40px; margin-top: 50px; }
      input { margin-bottom: 5px; height: 30px }
      button { width: 100%; color: #fff; background: #e57373; border: 1px solid transparent; padding: 10px; margin-top: 10px; font-size: 12pt; transition: background-color 222ms ease-out; }
  body
    form(method='POST' action='/login')
      h1 Login
      p= message
      div
        label username
        div
          input(name="username")
      div
        label password
        div
          input(type="password" name="password")
      div
        button.btn.btn-primary(type='submit', data-cy='login') Login